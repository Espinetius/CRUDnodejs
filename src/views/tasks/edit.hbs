<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">

    <h1 class="text-center text-3xl font-bold">Editar Asignatura</h1>

    {{#each tasks}}
    <form action="" method="POST" class="mt-4">

        <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Nombre de la asignatura" name="asignatura" value="{{asignatura}}">
        <input type="file" class="border border-gray-200 rounded-md bg-purple-200 w-full text-lg placeholder-purple-500 
      p-2 my-2 focus:bg-gray-200" placeholder="" name="img">
        <input class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Nombre del profesor" name="profesor" value="{{profesor}}">

        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-green-600 focus:bg-green-700">Enviar</button>

    </form>
    {{/each}}

</div>