<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <div class="bg-gray-200 overflow-hidden shadow-xl sm:rounded-lg mt-12">

        <table class="table-fixed w-full">
            <thead>
                <tr class="bg-purple-500 text-white">
                    <th class="w-20 py-4 ...">ID</th>
                    <th class="w-40 py-4 ...">Imagen</th>
                    <th class="w-1/4 py-4 ...">Asignatura</th>
                    <th class="w-1/2 py-4 ...">Profesor</th>
                    <th class="w-28 py-4 ...">Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each tasks}}
                <tr>
                    <td class="py-3 px-6">{{id}}</td>
                    <td class="p-3"><img src="{{img}}" /></td>
                    <td class="p-3">{{asignatura}}</td>
                    <td class="p-3 text-center">{{profesor}}</td>
                    <td class="p-3 flex">
                        <form action="/tasks/delete" method="POST" class="mx-2">
                            <input type="hidden" value="{{id}}" name="id">
                            <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                                <i class="fas fa-trash"></i></button>
                        </form>
                        <a href="/tasks/edit/{{id}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
                            <i class="fas fa-pen"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>